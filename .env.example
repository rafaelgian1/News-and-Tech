# Cloud database (recommended for production)
DATABASE_URL=

# LLM (optional if you use public RSS auto-feed + manual ingest)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_URL=https://api.openai.com/v1/responses

# Automation feed (optional)
AUTOMATION_FEED_URL=
AUTOMATION_FEED_TOKEN=

# Auto ingestion strategy
# AUTO_PUBLIC_FEED=true enables public RSS feed generation (no OpenAI cost)
AUTO_PUBLIC_FEED=true
# AUTO_GENERATE_DAILY_BRIEF=true enables OpenAI fallback generation if public feed is unavailable
AUTO_GENERATE_DAILY_BRIEF=true

# Public RSS fetch tuning (optional)
PUBLIC_FEED_TIMEOUT_MS=12000
PUBLIC_FEED_ITEMS_PER_QUERY=12
PUBLIC_FEED_HL=en-US
PUBLIC_FEED_GL=US
PUBLIC_FEED_CEID=US:en

# Image generation (optional)
IMAGE_GEN_ENDPOINT=
IMAGE_GEN_API_KEY=

# Sports data API (recommended for accurate fixtures/results in Match Center)
# Supports API-SPORTS direct key (preferred) or RapidAPI key.
SPORTS_API_KEY=
RAPIDAPI_KEY=
SPORTS_FOOTBALL_ENDPOINT=https://v3.football.api-sports.io/fixtures
SPORTS_BASKETBALL_ENDPOINT=https://v1.basketball.api-sports.io/games
SPORTS_TIMEZONE=Europe/Athens
SPORTS_API_TIMEOUT_MS=12000

# Secure ingest route in production
CRON_SECRET=

# Local SQLite fallback only
DAILY_BRIEF_DB_PATH=./daily_brief.db
